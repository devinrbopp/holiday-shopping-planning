<h1>Search</h1>
<form action="/gifts/results">
    <label for="search">Keywords</label>
    <div class="row">
        <div class="col s8">
            <input type="text" id="search" name="search" value="<%= keyword %>">
        </div>
        <div class="col s4">
            <input type="submit" class="btn blue" value="Search">
        </div>
    </div>
</form>
<div class="row">
    <% results.forEach(r => { %>
        <div class="col l6 m12 s12">
            <div class="card blue-grey medium">
                <div class="card-content white-text">
                    <span class="card-title"><%= r.title.replace(/&/g, "&amp;").replace(/>/g, "&gt;").replace(/</g, "&lt;").replace(/"/g, "&quot;") %></span>
                </div>
                <div class="card-action">
                    <a href="<%= r.url %>" target="_blank">View on Etsy</a>
                    <a href="/gifts/etsy/<%= r.listing_id %>">Add to Gift List</a>
                </div>
            </div>
        </div>
    <% }) %>
</div>